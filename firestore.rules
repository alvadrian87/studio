
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS collection
    match /users/{userId} {
      // Anyone can create their own user profile (signup)
      allow create: if request.auth.uid != null;
      // Users can only read/update their own profile, admins can read/write any
      allow read, update: if isOwner(userId) || isAdmin();
      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // TOURNAMENTS collection and its subcollections
    match /tournaments/{tournamentId} {
      // Anyone can read tournaments
      allow read: true;
      // Only admins can create, update, delete tournaments
      allow create, update, delete: if isAdmin();
      
      // Rule for all subcollections within a tournament (like inscriptions)
      match /{allSubcollections}/{docId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // EVENTOS collection
    match /eventos/{eventoId} {
       // Anyone can read events
      allow read: true;
      // Only admins can create, update, delete events
      allow create, update, delete: if isAdmin();
    }

    // CHALLENGES collection
    match /challenges/{challengeId} {
        // Any authenticated user can create a challenge
        allow create: if request.auth != null;
        // Any authenticated user can read challenges
        allow read: if request.auth != null;
        // Only involved players can update a challenge
        allow update: if request.auth.uid == resource.data.retadorId || request.auth.uid == resource.data.desafiadoId;
        // Only admins can delete challenges
        allow delete: if isAdmin();
    }

    // MATCHES collection
    match /matches/{matchId} {
        // Anyone can read matches
        allow read: true;
        // Only admins can create/delete matches (usually created via challenges)
        allow create, delete: if isAdmin();
        // Only involved players or admins can update a match
        allow update: if isAdmin() || request.auth.uid == resource.data.player1Id || request.auth.uid == resource.data.player2Id;
    }

  }
}
